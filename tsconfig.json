{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2020",
		"moduleResolution": "Node",
		"lib": ["ES2020"],
		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": true,
		"declarationMap": false,
		"sourceMap": false,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["dist", "test", "**/*.test.ts"]
}
